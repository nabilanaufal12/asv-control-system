/* Tambahan styling untuk tab di control_panel */
QGroupBox#Settings QTabWidget::pane {
    border: 1px solid #dcdcdc;
    border-top: none;
    border-radius: 0 0 8px 8px;
    background-color: #f0f2f5;
}

QGroupBox#Settings QTabBar::tab {
    background-color: #e0e0e0;
    color: #34495e;
    padding: 8px 15px;
    border: 1px solid #dcdcdc;
    border-bottom: none;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

QGroupBox#Settings QTabBar::tab:selected {
    background-color: #2ecc71; /* Aksen hijau untuk light theme */
    color: #ffffff;
    font-weight: bold;
}

QGroupBox#Settings QTabBar::tab:!selected:hover {
    background-color: #cccccc;
}

/* Penyesuaian untuk QPushButton di header */
#Header QPushButton {
    background-color: #17a2b8; /* Warna cyan/biru-hijau standar untuk tombol tema */
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    font-weight: normal;
}

#Header QPushButton:hover {
    background-color: #138496;
}
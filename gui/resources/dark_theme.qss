/* Tambahan styling untuk tab di control_panel */
QGroupBox#Settings QTabWidget::pane { /* Target QTabWidget di dalam QGroupBox "Settings" */
    border: 1px solid #4a515f; /* Border yang konsisten dengan grupbox */
    border-top: none;
    border-radius: 0 0 8px 8px;
    background-color: #282c34; /* Warna background tab content */
}

QGroupBox#Settings QTabBar::tab {
    background-color: #2c313a;
    color: #abb2bf;
    padding: 8px 15px; /* Sedikit lebih kecil agar pas */
    border: 1px solid #4a515f;
    border-bottom: none;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

QGroupBox#Settings QTabBar::tab:selected {
    background-color: #61afef;
    color: #ffffff;
    font-weight: bold;
}

QGroupBox#Settings QTabBar::tab:!selected:hover {
    background-color: #3e4451;
}

/* Penyesuaian untuk QPushButton di header */
#Header QPushButton {
    background-color: #007bff; /* Warna biru standar untuk tombol tema */
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    font-weight: normal; /* Normal, tidak terlalu menonjol seperti tombol lain */
}

#Header QPushButton:hover {
    background-color: #0056b3;
}